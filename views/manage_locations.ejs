<div class="content_area">
  <h1>Manage Locations</h1>
  <p>
	<a href="/edit_location/0" class="btn btn-primary" role="button">Add Location</a>
  </p>
  <h3>Current locations</h3>
  <% if (locations) {%>
  <table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Friendly Name</th>
      <th scope="col">Info URL</th>
	  <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
	<% for (var i = 0; i < locations.length; i++) { %>
    <tr>
      <th scope="row"><%= locations[i].friendlyName %></th>
      <td><a href="<%= locations[i].infoURL %>" target="_blank"><%= locations[i].infoURL %></a></td>
	  <td>
	      <a href="/edit_location/<%= locations[i].id %>" class="btn btn-primary" role="button">Edit</a>
		  <a href="#" class="btn btn-danger" role="button" onclick="deleteLocation(<%= locations[i].id %>,'<%= locations[i].friendlyName %>')">Delete</a> 
	  </td>
    </tr
	<% } %>
  </tbody>
  </table>
  <% } else { %>
	 <p>There are currently no locations.</p>
  <% } %>
</div>
<script>
function deleteLocation(id, friendlyName) {
    if (confirm("Are you sure you want to delete "+friendlyName+"?")) {
        window.location.href = '/delete_location/'+id;
    }
}
</script>